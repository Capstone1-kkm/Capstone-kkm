<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home">

    <!-- 스크롤뷰 -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/LinearLayoutBottom"
        android:layout_marginBottom="1dp"
        android:scrollbarThumbVertical="@android:color/transparent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">

            <!-- 이미지 세개 자동 슬라이드 -->
            <ViewFlipper
                android:id="@+id/View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoStart="true"
                android:flipInterval="2000">

                <!-- 첫 번째 이미지 -->

                <ImageView
                    android:id="@+id/store1"
                    android:layout_width="wrap_content"
                    android:layout_height="415dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/store1" />

                <!-- 두 번째 이미지 -->
                <ImageView
                    android:id="@+id/store2"
                    android:layout_width="wrap_content"
                    android:layout_height="415dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/store2" />

                <!-- 세 번째 이미지 -->
                <ImageView
                    android:id="@+id/store3"
                    android:layout_width="wrap_content"
                    android:layout_height="415dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/store3" />
            </ViewFlipper>

            <!-- 팝업스토어 리스트 -->
            <TextView
                android:id="@+id/reco"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:text="팝플의 추천!"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- 첫 번째 팝업 스토어 표시 -->
            <LinearLayout
                android:id="@+id/firstpopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <!-- 첫 번째 팝업 스토어 이미지 -->
                <ImageView
                    android:id="@+id/store4"
                    android:layout_width="200dp"
                    android:layout_height="218dp"
                    android:layout_above="@id/View"
                    android:src="@drawable/store4" />

                <!-- 첫 번째 팝업스토어 설명 레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팝업 카페"
                        android:textColor="@color/lime_green"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/damgom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="담곰이 카페"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/day"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024.05.24 ~ 2024.08.18"
                        android:textColor="@color/gray"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <!-- 두 번째 팝업 스토어 표시 -->
            <LinearLayout
                android:id="@+id/secondpopup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp">

                <!-- 두 번째 팝업 스토어 이미지 -->
                <ImageView
                    android:id="@+id/store5"
                    android:layout_width="200dp"
                    android:layout_height="218dp"
                    android:layout_above="@id/View"
                    android:src="@drawable/store5" />

                <!-- 두 번째 팝업스토어 설명 레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/popup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="팝업 스토어"
                        android:textColor="@color/lime_green"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/cloud"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A Cloud Traveler"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <TextView
                        android:id="@+id/day2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2024.04.23 ~ 2024.07.28"
                        android:textColor="@color/gray"
                        android:textSize="13dp"
                        tools:ignore="TextSizeCheck" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="이런건 어떠세요?"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- 팝업 추천 수평 스크롤뷰 -->
            <HorizontalScrollView
                android:id="@+id/Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:scrollbarThumbHorizontal="@android:color/transparent">

                <!-- 스크롤뷰가 하나의 자식만 받기 때문에 생성한 리니어레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 첫 번째 스크롤뷰 팝업스토어 -->
                    <LinearLayout
                        android:id="@+id/firsthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/store6"
                            android:layout_width="200dp"
                            android:layout_height="228dp"
                            android:src="@drawable/store6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 스토어"
                            android:textColor="@color/lime_green"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/ikea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="IKEA 팝업스토어 더현대 서울"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.03.19 ~ 2024.06.30"
                            android:textColor="@color/gray"
                            android:textSize="13dp" />
                    </LinearLayout>

                    <!-- 두 번째 스크롤뷰 팝업스토어 -->
                    <LinearLayout
                        android:id="@+id/secondhor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/store7"
                            android:layout_width="200dp"
                            android:layout_height="228dp"
                            android:src="@drawable/store7" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 스토어"
                            android:textColor="@color/lime_green"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/um"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="엄브로 100주년 MR.UM's CLEANERS"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.02.02 ~ 2024.06.26"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>

                    <!-- 세 번째 스크롤뷰 팝업스토어 -->
                    <LinearLayout
                        android:id="@+id/thirdhor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/store8"
                            android:layout_width="200dp"
                            android:layout_height="228dp"
                            android:src="@drawable/store8" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 스토어"
                            android:textColor="@color/lime_green"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/bless"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="블레스문 팝업스토어"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.05.11 ~ 2024.08.31"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="스토어 외에도 다양한 팝업!"
                android:textSize="17dp"
                android:textStyle="bold" />

            <!-- 팝업 추천 수평 스크롤뷰 -->
            <HorizontalScrollView
                android:id="@+id/Horizontal2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="10dp"
                android:scrollbarThumbHorizontal="@android:color/transparent">

                <!-- 스크롤뷰가 하나의 자식만 받기 때문에 생성한 리니어레이아웃 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <!-- 첫 번째 스크롤뷰 팝업스토어 -->
                    <LinearLayout
                        android:id="@+id/firsthor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/store9"
                            android:layout_width="200dp"
                            android:layout_height="228dp"
                            android:src="@drawable/store9" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 전시"
                            android:textColor="@color/lime_green"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/cat"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="요물, 우리를 홀린 고양이"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.05.03 ~ 2024.08.18"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>

                    <!-- 두 번째 스크롤뷰 팝업스토어 -->
                    <LinearLayout
                        android:id="@+id/secondhor2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/store10"
                            android:layout_width="200dp"
                            android:layout_height="228dp"
                            android:src="@drawable/store10" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="팝업 전시"
                            android:textColor="@color/lime_green"
                            android:textSize="13dp" />

                        <TextView
                            android:id="@+id/bird"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="달리기 : 새는 날고 물고기는 헤엄치고 인간은 달린다"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/day11"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2024.04.05 ~ 2024.07.28"
                            android:textColor="@color/gray"
                            android:textSize="13dp"
                            tools:ignore="TextSizeCheck" />
                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_above="@+id/LinearLayoutBottom"
        android:background="@android:color/darker_gray"/>
    <!-- 하단 사진들 -->
    <LinearLayout
        android:id="@+id/LinearLayoutBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/cardview_light_background"
        android:layout_alignParentBottom="true"
        tools:ignore="ExtraText">

        <!-- 하단 사진 1 -->
        <ImageView
            android:id="@+id/imageViewBottom1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <!-- 하단 사진 2 -->
        <ImageView
            android:id="@+id/imageViewBottom2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/map1" />

        <!-- 하단 사진 3 -->
        <ImageView
            android:id="@+id/imageViewBottom3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/home3" />

        <!-- 하단 사진 4 -->
        <ImageView
            android:id="@+id/imageViewBottom4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/chat1" />

        <!-- 하단 사진 5 -->
        <ImageView
            android:id="@+id/imageViewBottom5"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/user3" />

    </LinearLayout>
</RelativeLayout>